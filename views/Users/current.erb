<body>

  <!-- <div id='box1'> -->
    <p id='header'>Current User</p>
  	<a href='/current/edit/<%= @user.id %>'>
  		<p id='header'>
  			<%=@user.username%>
  		</p> 	
  	</a>
 <!--  </div> -->

  <br>

  <div id='box1'>
    <p id='header'>Make a Post</p>
    <form method="POST" action="/createBlog">
      <input type="text" name="title" placeholder="Title" required>
      <br>
      <textarea name="content" maxlength="150" placeholder="Type Blog" required></textarea>
      <button class='btn' id="post" type="submit" value="Post">Post</button>
    </form>
  </div>

  <% @blogs.reverse.each do |b| %>
    <div id='box1'>
      <a href='/blogs/<%= b.id %>'>
        <p id='header'>
        	<%= b.title %>
        </p>
        <p id='content'>
    			<%= b.content %>
    		</p>
      </a>
  	</div>
  <% end %>


  <p id='header'>Logout</p>
  <form action='/logout' method='post'>
  	<button class='btn' type="submit" value="Logout">Logout</button>
  </form>

<p id='header'>Delete</p>
<form action='/delete_user/current' method='post'>
  <button class='btn' type="submit" value="Delete User">Delete User</button>
</form>





</body>