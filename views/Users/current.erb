<body>

  <!-- <div id='box1'> -->
    <p id='header'>Current User</p>
  	<a href='/current/<%= @user.id %>/edit'>
  		<p id='header'>
  			<%=@user.username%>
  		</p> 	
  	</a>
 <!--  </div> -->

  <br>

  <div id='box1'>
    <p id='header'>Make a Post</p>
    <form method="POST" action="/createBlog">
      <input type="text" name="title" placeholder="Title">
      <br>
      <textarea name="content" maxlength="150"></textarea>
      <br>
      <input type="submit" value="Post">
    </form>
  </div>
  <br>

  <% @blogs.reverse.each do |b| %>
    <div id='box1'>
      <a href='/blogs/<%= b.id %>'>
        <p id='header'>
        	<%= b.title %>
        </p>
        <p id='content'>
    			<%= b.content %>
    		</p>
      </a>
  	</div>
    <br>
  <% end %>

  <hr>

  <p id='header'>Logout</p>
  <form action='/logout' method='post'>
  	<input type="submit" value="Logout">
  </form>

</body>